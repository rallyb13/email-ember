<form>
  <div class="form-group">
    <label for="isFrom">From:</label>
    {{input type="text" id="isFrom" value=isFrom class="form-control"}}
  </div>

  <div class="form-group">
    <label for="isTo">To:</label>
    {{input type="text" id="isTo" value=isTo class="form-control"}}
  </div>

  <div class="form-group">
    <label for="subject">Subject:</label>
    {{input type="text" id="subject" value=subject class="form-control"}}
  </div>

  <div class="form-group">
    <label for="message">Message:</label>
    {{textarea type="text" rows="8" id="message" value=message class="form-control"}}
  </div>

  <button {{action "send"}} class="btn btn-primary btn-md">
    <span class="glyphicon glyphicon-bold"></span>last It!</button>
</form>
